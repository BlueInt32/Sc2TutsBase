@model Sc2TutsBase.Models.TutorialEntry
@using Tools.Extensions
@{
    ViewBag.Title = "EditTuto";
}

<h2>EditTuto</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset id="editionfs">
        <legend>Edition d'un tuto</legend>


        <div class="editor-label">
            @Html.LabelFor(model => model.Author)
        </div>
        <div class="editor-field">
            @Html.EnumDropDownListFor(model => model.Author)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Title, new { style = "width:600px;" })
        </div>
		

        <div class="editor-label">
            @Html.LabelFor(model => model.VideoUrl)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.VideoUrl, new { style = "width:600px;" })
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Description, new { style = "width:600px;" })
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CurrentLeague)
        </div>
        <div class="editor-field" id="multipleLeague">
            @Html.EnumMultipleDropDownListFor(model => model.CurrentLeague)
			@*@Html.ListBox("CurrentLeague", Model.CurrentLeague as MultiSelectList	)*@
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Race)
        </div>
        <div class="editor-field">
            @Html.EnumDropDownListFor(model => model.Race)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Against)
        </div>
        <div class="editor-field">
            @Html.EnumDropDownListFor(model => model.Against)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.VideoType)
        </div>
        <div class="editor-field">
            @Html.EnumDropDownListFor(model => model.VideoType)
        </div>

        <div class="editor-label">
            Fichier de BO (pdf)
        </div>
        <div class="editor-field">
			<input type="file" id="pdfFile" name="pdfFile"/>
			<br/>
			@if(System.IO.File.Exists(Server.MapPath(string.Format("~/pdfFiles/{0}.pdf", Model.Id))))
			{
				<a target="_blank" href="@Url.Content(string.Format("~/pdfFiles/{0}.pdf", Model.Id))">Un fichier existe déjà</a>
			}
        </div>
        <p>
            <input type="submit" value="Modifier" />
        </p>
    </fieldset>
}
@ViewBag.Message
<div>
    @Html.ActionLink("Back to List", "Index")
</div>